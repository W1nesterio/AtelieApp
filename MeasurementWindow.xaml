<Window x:Class="Atelie.MeasurementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Услуги ателье" Height="600" Width="800"
        WindowStartupLocation="CenterScreen" Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">

            <TextBlock Text="Наши услуги" FontSize="26" FontWeight="Bold" Margin="0,0,0,20" />

            <!-- Пример услуги -->
            <Border BorderBrush="#ccc" BorderThickness="1" Padding="15" Margin="0,0,0,15" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Подгонка одежды" FontSize="18" FontWeight="Bold" />
                    <TextBlock Text="Укоротим или удлиним брюки, юбки, рукава, платья и другую одежду по вашему размеру." 
                               TextWrapping="Wrap" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="#ccc" BorderThickness="1" Padding="15" Margin="0,0,0,15" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Ремонт одежды" FontSize="18" FontWeight="Bold" />
                    <TextBlock Text="Заменим молнии, пуговицы, подкладки, устраним повреждения и обновим внешний вид одежды." 
                               TextWrapping="Wrap" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="#ccc" BorderThickness="1" Padding="15" Margin="0,0,0,15" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Изменение фасона" FontSize="18" FontWeight="Bold" />
                    <TextBlock Text="Переделаем фасон одежды по вашему вкусу: изменим вырез, длину, рукава и другие детали." 
                               TextWrapping="Wrap" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="#ccc" BorderThickness="1" Padding="15" Margin="0,0,0,15" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Химчистка и уход" FontSize="18" FontWeight="Bold" />
                    <TextBlock Text="Профессиональная чистка и уход за тканями различного типа." 
                               TextWrapping="Wrap" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Можно добавить еще услуги аналогичным образом -->

        </StackPanel>
    </ScrollViewer>
</Window>
