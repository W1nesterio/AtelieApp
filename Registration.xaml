<Window x:Class="Atelie.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atelie"
        mc:Ignorable="d"
        Title="Registration" Height="320" Width="370"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Регистрация" HorizontalAlignment="Center" Margin="0,12,0,0" VerticalAlignment="Top" FontSize="20"/>

        <Label Content="Логин:" HorizontalAlignment="Left" Margin="57,82,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="usernameTextBox" HorizontalAlignment="Left" Margin="60,112,0,0" VerticalAlignment="Top" Width="245" Height="22"/>

        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="57,145,0,0" VerticalAlignment="Top" FontSize="14"/>
        <PasswordBox x:Name="passwordTextBox" HorizontalAlignment="Left" Margin="60,174,0,0" VerticalAlignment="Top" Width="245" Height="22"/>

        <Button Content="Создать" HorizontalAlignment="Left" Margin="118,211,0,0" VerticalAlignment="Top" Height="22" Width="132" Click="RegisterButton_Click"/>
    </Grid>
</Window>

