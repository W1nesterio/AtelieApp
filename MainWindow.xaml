<Window x:Class="Atelie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Atelie"
        mc:Ignorable="d"
        Title="MainWindow" Height="363" Width="591"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="27,0,0,34">
        <TextBox Name="usernameTextBox" HorizontalAlignment="Left" Margin="291,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245" Height="22"/>
        <Label Content="Добро пожаловать" HorizontalAlignment="Left" Margin="325,41,0,0" VerticalAlignment="Top" Height="40" Width="193" FontSize="20"/>
        <PasswordBox Name="passwordTextBox" HorizontalAlignment="Left" Margin="291,200,0,0" VerticalAlignment="Top" Width="245" Height="22"/>
        <Label Content="Логин:" HorizontalAlignment="Left" Margin="288,108,0,0" VerticalAlignment="Top" Height="29" Width="54" FontSize="14"/>
        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="288,171,0,0" VerticalAlignment="Top" Height="29" Width="63" FontSize="14"/>
        <Button Content="Войти" HorizontalAlignment="Left" Margin="349,237,0,0" VerticalAlignment="Top" Height="22" Width="132" Click="LoginButton_Click"/>
        <Label Content="Нету аккаунта?" HorizontalAlignment="Left" Margin="334,266,0,0" VerticalAlignment="Top" FontSize="9" RenderTransformOrigin="0.355,0.666"/>
        <TextBlock HorizontalAlignment="Left" Margin="402,270,0,0" VerticalAlignment="Top" FontSize="9">
            <Hyperlink Click="Hyperlink_Click" Foreground="Blue" Cursor="Hand">
                <Run Text="Зарегистрируйтесь"/>
            </Hyperlink>
        </TextBlock>
        <Image Margin="-13,36,289,-11" Source="/imgonline-com-ua-Shape-mvhpl7pgK320Ta.png" Stretch="Fill"/>
    </Grid>
</Window>
